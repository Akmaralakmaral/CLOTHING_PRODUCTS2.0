@model CLOTHING_PRODUCTS.Models.Salary

@{
    ViewData["Title"] = "Create Salary";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmployeeID" class="control-label">Employee:</label>
        <select asp-for="EmployeeID" class="form-control" asp-items="@ViewBag.Employees">
            <option value="">-- Select Employee --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Month" class="control-label">Month:</label>
        <select asp-for="Month" class="form-control">
            @foreach (var month in ViewBag.Months)
            {
                <option value="@month.Value">@month.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Year:</label>
        <select asp-for="Year" class="form-control">
            @foreach (var year in ViewBag.Years)
            {
                <option value="@year.Value">@year.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
