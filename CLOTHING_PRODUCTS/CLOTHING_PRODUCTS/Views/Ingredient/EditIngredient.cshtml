@model CLOTHING_PRODUCTS.Models.Ingredient

<h2>Edit Ingredient</h2>

<form asp-action="EditIngredient">
    
    <input type="hidden" asp-for="IngredientId" />
    <input type="hidden" asp-for="FinishedProductId" /> <!-- Добавлено скрытое поле для передачи FinishedProductId -->
    <div class="form-group">
        <label asp-for="RawMaterialId">Raw Material</label>
        <select asp-for="RawMaterialId" asp-items="@(new SelectList(ViewBag.RawMaterials, "RawMaterialId", "Name"))" class="form-control"></select>
        <span asp-validation-for="RawMaterialId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>