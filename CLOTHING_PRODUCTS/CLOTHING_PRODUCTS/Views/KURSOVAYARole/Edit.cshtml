@model CLOTHING_PRODUCTS.Models.Role

<h2>Edit Role</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RoleId" />
    
    <div class="form-group">
        <label asp-for="RoleName">Role Name:</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginName">Login Name:</label>
        <input asp-for="LoginName" class="form-control" />
        <span asp-validation-for="LoginName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="text" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Role</button>
</form>
