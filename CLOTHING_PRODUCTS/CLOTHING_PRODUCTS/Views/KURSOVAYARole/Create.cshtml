@model CLOTHING_PRODUCTS.Models.Role

<h2>Create New Role</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="RoleName">Role Name:</label>
        <input type="text" class="form-control" id="RoleName" name="RoleName" value="@Model.RoleName">
    </div>
    <div class="form-group">
        <label for="LoginName">Login Name:</label>
        <input type="text" class="form-control" id="LoginName" name="LoginName" value="@Model.LoginName">
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="text" class="form-control" id="Password" name="Password" value="@Model.Password">
    </div>
    <button type="submit" class="btn btn-primary">Create Role</button>
</form>
