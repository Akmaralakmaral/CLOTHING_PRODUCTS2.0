@model CLOTHING_PRODUCTS.Models.FinishedProduct

<h2>Edit FinishedProduct</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="FinishedProductId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MeasurementUnitId">MeasurementUnit</label>
        <select asp-for="MeasurementUnitId" asp-items="@(new SelectList(ViewBag.MeasurementUnits, "MeasurementUnitId", "Name"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>