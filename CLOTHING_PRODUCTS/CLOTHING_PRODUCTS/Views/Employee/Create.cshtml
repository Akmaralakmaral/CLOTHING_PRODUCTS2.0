@model CLOTHING_PRODUCTS.Models.Employee

<h2>Create New Employee</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FullName">Full Name</label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PositionId">Position</label>
        <select asp-for="PositionId" asp-items="@(new SelectList(ViewBag.Positions, "EmployeePositionId", "Title"))" class="form-control" required></select>
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" required />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" required />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
